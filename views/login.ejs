<%- include('./common/hearder.ejs') %>
  <div class="col-md-12 col-sm-12 col-xs-12 column">
    <% if ( typeof (error) !== 'undefined' && error )  { %>
      <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <span>
          注册失败!
        </span>
        <strong>
          <%= error %>
        </strong>
      </div>
      <% } %>
        <% if ( typeof(success) !== 'undefined' && success )  { %>
          <div class="alert alert-dismissable alert-success">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <span>
              注册成功!
            </span>
            <strong>
              <%= success %>
            </strong>
            <a href="/login">登 录</a>
          </div>
          <% } else { %>
            <div class="jumbotron">
              <h2 class="col-sm-offset-1">
                欢迎登录 微 小 博！
              </h2>
              <br>
              <form class="form-horizontal" role="form" action="/signin" method="post">
                <div class="form-group">
                  <label for="inputEmail3" class="col-sm-1 control-label">账 号</label>
                  <div class="col-sm-4">
                    <input class="form-control" id="loginname" name="loginname" />
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputPassword3" class="col-sm-1 control-label">密 码</label>
                  <div class="col-sm-4">
                    <input type="password" class="form-control" id="psd" name="psd" />
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-offset-1 col-sm-10">
                    <div class="checkbox">
                      <label>
                        <input type="checkbox" />记住密码</label>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-offset-1 col-sm-10">
                    <button type="submit" class="btn btn-primary">登 录</button>
                    <a class="btn btn-default" href="/reg">没有账号,前去注册</a>
                  </div>
                </div>
              </form>
            </div>
            <% } %>
  </div>

  <%- include('./common/footer.ejs') %>