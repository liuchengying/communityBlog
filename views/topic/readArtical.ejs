<%- include('../common/hearder.ejs') %>
<div class="row clearfix" style="padding-left:15px;">
	<div class="col-md-9 col-sm-9 col-xs-12 column" style="background-color: white;padding: 0;">
		<% if(typeof error == 'undefined') { %>
		<div style="width:100%;height:85px;border-bottom:1px solid #b2bec3;padding:8 15">
			<p style="font-size:2.5rem"><strong><%= data.title %></strong></p>
			<p style="font-size:1.35rem;color:#797d80;">
				<span>阅读量: <%= data.visit_count %></span>
				<span style="display:inline-block;border:3px solid grey;border-radius:50%;line-height:20px;margin-left:5px;margin-right:5px;margin-bottom:2px;"></span>
				<span>收藏量: <%= data.collect_cout %></span>
				<span style="display:inline-block;border:3px solid grey;border-radius:50%;line-height:20px;margin-left:5px;margin-right:5px;margin-bottom:2px;"></span>
				<span> <%= data.author %> 于 <%= data.create_at_time() %> 发布</span>

			</p>
		</div>
		<div style="width:100%;padding:10 15;font-size:1.8rem;color:#2c3e50">
			<%= data.content %>
		</div>
			
		<% } %>
	</div>
	<%- include('../common/slider-bar.ejs')%>
</div>


<%- include('../common/footer.ejs') %>